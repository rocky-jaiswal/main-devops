server {
    listen   80;
    server_name rockyj.in; 

    access_log  /var/log/nginx/rockyjin.access.log;

    location / {
        root /home/deploy/my_blogs/build;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_buffering off;
    }
}